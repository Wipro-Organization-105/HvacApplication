{
    "name": "AOSP Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers-extra/features/cmake:1.0.0": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "twxs.cmake"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace/aosp,type=bind"
    ]
}