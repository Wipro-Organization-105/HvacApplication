{
    "name": "AOSP Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "twxs.cmake"
            ]
        }
    },
    "remoteUser": "developer",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace/aosp,type=bind"
    ],
    "workspaceFolder": "/workspace/aosp"
}